{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "lldb",
			"request": "launch",
			"name": "(lldb) fixed args",
			"program": "${workspaceFolder}/philo",
			"args": ["200", "220", "100", "100"],
			"cwd": "${workspaceFolder}",
			"preLaunchTask": "make",
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "(lldb) philo prompt args",
			"program": "${workspaceFolder}/philo/philo",
			"args": [],
			"cwd": "${workspaceFolder}",
			"preLaunchTask": "make"
		},
	  {
		"name": "(gdb) PHILO fixed args",
		"type": "cppdbg",
		"request": "launch",
		"program": "${workspaceFolder}/philo/philo",
		"args": ["200", "160", "50", "50"],
		"stopAtEntry": false,
		"cwd": "${workspaceFolder}/philo",
		"environment": [],
		"externalConsole": false,
		"MIMode": "gdb",
		"preLaunchTask": "make philo",
		"setupCommands": [
		  {
			"description": "Enable pretty-printing for gdb",
			"text": "-enable-pretty-printing",
			"ignoreFailures": true
		  }
		]
	  },
	  {
		"name": "(gdb) BONUS fixed args",
		"type": "cppdbg",
		"request": "launch",
		"program": "${workspaceFolder}/philo_bonus/philo_bonus",
		"args": ["9", "800", "200", "200", "6"],
		"stopAtEntry": false,
		"cwd": "${workspaceFolder}/philo_bonus",
		"environment": [],
		"externalConsole": false,
		"MIMode": "gdb",
		"preLaunchTask": "make philo_bonus",
		"setupCommands": [
		  {
			"description": "Enable pretty-printing for gdb",
			"text": "-enable-pretty-printing",
			"ignoreFailures": true
		  },
		  {
			"description": "Disable breaking on SIGSTOP",
			"text": "handle SIGSTOP nostop noprint pass"
		},
		{
			"description": "Disable breaking on SIGCONT",
			"text": "handle SIGCONT nostop noprint pass"
		},
		{
			"description": "Disable breaking on SIGTERM",
			"text": "handle SIGTERM nostop noprint pass"
		},
		//   {
		// 	"description": "Follow child processes",
		// 	"text": "set follow-fork-mode child",
		// 	"ignoreFailures": true
		// }
		]
	  },
	  {
		"name": "(gdb) Attach to Process",
		"type": "cppdbg",
		"request": "attach",
		"program": "${workspaceFolder}/philo_bonus/philo_bonus",
		"processId": "${command:pickProcess}",
		"MIMode": "gdb",
		"setupCommands": [
			{
				"description": "Enable pretty-printing for gdb",
				"text": "-enable-pretty-printing",
				"ignoreFailures": true
			}
		]
	}
	],
	"inputs": [
		{
		  "id": "args",
		  "type":"promptString",
		  "description": "args",
		  "default": "",
		},
	  ]

  }
